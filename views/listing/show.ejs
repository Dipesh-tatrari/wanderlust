<% layout("/layouts/boilerplate.ejs") %>
<body>
    <br>
    <h3 class="cols-8 offset-3"><b><%= listing.title %></b></h3>
    <div class="row">
        <div class="cols-8 offset-3">
            <div class="card" style="width: 30rem;">
        <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing_image">
        <div class="card-body">
        <p class="card-text">
            <u>Owned by:</u> <b><%= listing.owner.username %></b></p>
            <p class="card-text"><i><%= listing.description %></i></p>
            <p class="card-text">Price: &#8377;<%= listing.price %></p>
            <p class="card-text">Location: <%= listing.location %></p>
            <p class="card-text">Country: <%= listing.country %></p>

        </div>
    </div>
        </div>
    <br>

    <% if(currentUser && currentUser._id.equals(listing.owner._id)){ %>
    <form action="/listings/<%= listing._id %>/edit">
        <button class="btn btn-dark add-btn">Edit</button>
    </form>
    <br><br>
    <form action="/listings/<%= listing._id %>?_method=DELETE" method="post">
        <button class="btn btn-dark">Delete</button>
    </form>
    <% } %>
</div>
      <hr> 
    <% if(currentUser){ %>
         
    <div >
        
        <h4>Leave a Review</h4>
        <form action="/listings/<%= listing.id %>/reviews" method="post" novalidate class="needs-validation">
            <div class=" mb-3">
            
            <fieldset class="starability-slot">
                <!-- <label for="rating" class="form-label">Rating</label> -->
                 <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked aria-label="No rating." />
                <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                <label for="first-rate1" title="Terrible">1 star</label>
                <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                <label for="first-rate2" title="Not good">2 stars</label>
                <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                <label for="first-rate3" title="Average">3 stars</label>
                <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                <label for="first-rate4" title="Very good">4 stars</label>
                <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                <label for="first-rate5" title="Amazing">5 stars</label>
            </fieldset>
            </div>
            
            <div class="mb-3">
                <label for="comment" class="form-label">Comments</label>
                <textarea name="review[comment]" id="comment" cols="10" rows="5" class="form-control" required></textarea>
                <div class="invalid-feedback">Please submit some commments for review</div><!--this is for the invalid feedback of any sectionn of the form, it pop ups a message if feild is left empty-->
                <!--but still we can send wrong data through hoppscotch so we need tom apply the server side validation so that wrong data should not store in our database-->
            </div>
            <button class="btn btn-dark">Submit</button>
        </form>
    </div>
    <% } %>
    <hr>
    <div>
        <h4>All reviews</h4>
        <div class="row">
        <% for(review of listing.reviews){%>
          <div class="card col-5 mb-3 ms-3">
            <div class="card-body ms-3">
                <h5 class="card-title"><u><%=review.author.username%></u></h5><!--this is the username of the author of the review-->
                <p class="starability-result card-text" data-rating="<%=review.rating%>"></p>
                <p class="card-text"><%=review.comment%></p><br>
                
            </div>
            <form action="/listings/<%= listing._id %>/reviews/<%=review._id %>?_method=DELETE" method="post">
                <button class="btn btn-sm btn-dark">Delete</button>
            </form>
          </div>  
        <% } %>
        
        </div>
    </div>


</body>



