<% layout("/layouts/boilerplate.ejs") %>
<body>
    <br><br>
    <h3>Signup on Wanderlust</h3>
    <form action="/signup" method="post" class="needs-validation" novalidate>
        <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input type="text" name="username" placeholder="enter username" class="form-control" required>
        <div class="valid-feedback">Username looks good</div>
        </div>

        <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" name="email" placeholder="enter email" class="form-control" required>
        <div class="valid-feedback">Email looks good</div>
        </div>

        <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input type="password" name="password" placeholder="enter password" class="form-control" required>
        <div class="valid-feedback">Password looks good</div>
        </div>

        <button class="btn btn-dark add-btn">Sign Up</button>
    </form>
    <br><br>